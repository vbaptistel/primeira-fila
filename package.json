{
  "name": "primeira-fila",
  "private": true,
  "version": "0.1.0",
  "description": "Plataforma de venda de ingressos - monorepo",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "backend",
    "frontend/apps/web-customer",
    "frontend/apps/web-backoffice",
    "frontend/packages/shared"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test:arch": "node scripts/check-boundaries.mjs",
    "smoke:backend": "node scripts/smoke-backend.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test:arch && npm run build"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "prisma": "^7.4.0"
  }
}
