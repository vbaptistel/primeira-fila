{
  "name": "@primeira-fila/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run prisma:generate",
    "dev": "nest start --watch",
    "prebuild": "npm run prisma:generate",
    "build": "nest build",
    "start": "node dist/main.js",
    "prelint": "npm run prisma:generate",
    "lint": "eslint \"src/**/*.ts\"",
    "pretypecheck": "npm run prisma:generate",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pretest": "npm run prisma:generate",
    "test": "vitest run",
    "prisma:generate": "PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma generate",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@fastify/view": "^11.1.1",
    "@nestjs/common": "^11.1.7",
    "@nestjs/core": "^11.1.7",
    "@nestjs/platform-fastify": "^11.1.7",
    "@nestjs/swagger": "^11.2.1",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "jose": "^6.1.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.13",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "prisma": "^7.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.0.9"
  }
}
